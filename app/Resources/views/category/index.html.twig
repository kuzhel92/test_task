{% extends 'base.html.twig' %}

{% block body %}
    <h1>Category of products</h1>
        {% for category in categories %}
               <h2><a href="{{ path('category_show', { 'id': category.id }) }}"> {{ category.name }}</a></h2>
                    <ul style="padding:0;">
                        <li style="list-style-type:none;">
                            <a class="btn btn-info" href="{{ path('category_show', { 'id': category.id }) }}">show</a>
                        </li>
                        <li style="list-style-type:none;">
                            <a style="margin-top:10px;" class="btn btn-warning"href="{{ path('category_edit', { 'id': category.id }) }}">edit</a>
                        </li>
                    </ul>
                    <hr style="border-top: 3px solid green;">
        {% endfor %}
    <ul style="padding:0;">
        <li style="list-style-type:none;">
            <a class="btn btn-success" href="{{ path('category_new') }}">Create a new entry</a>
        </li>
    </ul>
{% endblock %}
